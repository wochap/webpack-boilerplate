{
  "private": true,
  "scripts": {
    "prebuild": "shx rm -rf dist && shx mkdir -p dist && shx cp -R public/* dist || true",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "postbuild": "http-server dist",
    "build:watch": "cross-env NODE_ENV=development webpack-dev-server --mode development",
    "dev": "npm run build:watch",
    "dev:inspect": "cross-env NODE_ENV=development node --inspect node_modules/.bin/webpack-dev-server --mode development",
    "test": "cross-env NODE_ENV=test jest --config=test/jest.config.json",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "pretty-quick --staged",
      "npm run test -- --bail --findRelatedTests"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/plugin-proposal-export-namespace-from": "^7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/runtime-corejs3": "^7.9.2",
    "autoprefixer": "^9.7.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.3.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.2",
    "dotenv-extended": "^2.8.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eventsource-polyfill": "^0.9.6",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "3.2.0",
    "http-server": "^0.12.1",
    "husky": "^4.2.5",
    "inline-manifest-webpack-plugin": "4.0.2",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "mini-css-extract-plugin": "^0.9.0",
    "my-local-ip": "^1.0.0",
    "node-sass": "^7.0.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "progress-bar-webpack-plugin": "^2.1.0",
    "react-dev-utils": "^10.2.1",
    "sass-loader": "^8.0.2",
    "shx": "^0.3.2",
    "style-loader": "^1.1.4",
    "url-loader": "^4.1.0",
    "webpack": "^4.42.1",
    "webpack-bundle-analyzer": "^3.7.0",
    "webpack-cli": "^3.3.11",
